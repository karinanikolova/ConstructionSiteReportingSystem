@model WorkEditFormModel

<div class="row" id="workForm">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="SiteId"></label>
				<select asp-for="SiteId" class="form-control">
					@foreach (var site in Model.Sites)
					{
						<option value="@site.Id">@site.Name</option>
					}
				</select>
				<span asp-validation-for="SiteId" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<div class="d-flex">
					<div class="pe-2 flex-grow-1">
						<label asp-for="WorkTypeId"></label>
						<select asp-for="WorkTypeId" class="form-control">
							@foreach (var workType in Model.WorkTypes)
							{
								<option value="@workType.Id">@workType.Name</option>
							}
						</select>
						<span asp-validation-for="WorkTypeId" class="small text-danger"></span>
					</div>
					<div class="d-flex align-items-end">
						<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-btn-for="workType">🞥</button>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="4" class="form-control" placeholder="Enter construction and assembly work description here..."></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CarryOutDate"></label>
				<input asp-for="CarryOutDate" class="form-control" placeholder="Enter construction and assembly work carry out date here...">
				<div id="CarryOutDate" class="form-text">
					Enter date in format: @DateTimeConverter.ConvertDateToString(DateTime.UtcNow)
				</div>
				<span asp-validation-for="CarryOutDate" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<div class="d-flex">
					<div class="pe-2 flex-grow-1">
						<label asp-for="StageId"></label>
						<select asp-for="StageId" class="form-control">
							@foreach (var stage in Model.Stages)
							{
								<option value="@stage.Id">@stage.Name</option>
							}
						</select>
						<span asp-validation-for="StageId" class="small text-danger"></span>
					</div>
					<div class="d-flex align-items-end">
						<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-btn-for="stage">🞥</button>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="d-flex">
					<div class="pe-2 flex-grow-1">
						<label asp-for="ContractorId"></label>
						<select asp-for="ContractorId" class="form-control">
							@foreach (var contractor in Model.Contractors)
							{
								<option value="@contractor.Id">@contractor.Name</option>
							}
						</select>
						<span asp-validation-for="ContractorId" class="small text-danger"></span>
					</div>
					<div class="d-flex align-items-end">
						<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-btn-for="contractor">🞥</button>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Quantity"></label>
				<input asp-for="Quantity" class="form-control" placeholder="Enter work quantity here...">
				<span asp-validation-for="Quantity" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<div class="d-flex">
					<div class="pe-2 flex-grow-1">
						<label asp-for="UnitId"></label>
						<select asp-for="UnitId" class="form-control">
							@foreach (var unit in Model.Units)
							{
								<option value="@unit.Id">@unit.Type</option>
							}
						</select>
						<span asp-validation-for="UnitId" class="small text-danger"></span>
					</div>
					<div class="d-flex align-items-end">
						<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-btn-for="unit">🞥</button>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="CostPerUnit"></label>
				<input asp-for="CostPerUnit" class="form-control" placeholder="Enter cost per measurement unit of work here...">
				<span asp-validation-for="CostPerUnit" class="small text-danger"></span>
			</div>
			<input type="hidden" asp-for="CreatorId" />

			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>

			<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div id="addEditWork" class="modal-content">
						<div class="modal-header">
							<h1 class="modal-title fs-5" id="staticBackdropLabel">Attention</h1>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<p class="text-center">You are about to be redirected to another page. All filled-in data will be lost. Do you wish to proceed?</p>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
							<a asp-area="" asp-controller="Suggest" asp-action="" class="btn btn-outline-primary" role="button">Proceed</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>